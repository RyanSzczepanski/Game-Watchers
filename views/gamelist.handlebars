{{#if gamelists.length}}
<h2>Your Gamelists</h2>
{{/if}}

{{#unless gamelists.length}}
<div class="col s12 gamelist-card">
    <h2>Create New List</h2>
    <form class="new-gamelist-form">
      <div>
        <label for="gamelist-title">Title</label>
        <input type="text" id="gamelist-title" name="gamelist-title" />
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </div>
{{/unless}}

{{#each gamelists as |gamelist|}}

{{#unless @index}}
<section class="row">  

    {{> gamelist-info gamelist = gamelist size = "s6"}}

  <div class="col s6 gamelist-card">
    <h2>Create New List</h2>
    <form class="new-gamelist-form">
      <div>
        <label for="gamelist-title">Title</label>
        <input type="text" id="gamelist-title" name="gamelist-title" />
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </div>
</section>
{{/unless}}

{{#if @index}}

  {{#if (ShouldCreateNewRow @index)}}
  <section class="row gamelist-row">
  {{setVar "sn" (GetClassSectionNumb ../gamelists @index)}}
  {{/if}}

    {{> gamelist-info gamelist = gamelist size = ../sn}}

  {{#if (ShouldEndRow ../gamelists @index)}}
  </section>
  {{/if}}

{{/if}}
{{/each}}

<script src="/javascript/add-gamelist.js"></script>