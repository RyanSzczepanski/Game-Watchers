<div class="card hoverable">
  <div class="card-image">
    <a href="/gamelist/view/{{gamelist.id}}">
      {{log gamelist}}
      <img class="gamelist-card-image" src="{{gamelist.games.0.game_image_url}}">
    </a>
    {{#if canEdit}}
    <a class="btn-floating halfway-fab waves-effect waves-light red" href="/gamelist/edit/{{gamelist.id}}"><i
        class="material-icons">edit</i></a>
    {{/if}}
  </div>
  <div class="card-content">
    <span>
      {{title}}
      <br>
      {{#unless canEdit}}
      Created by <a href="#">{{gamelist.user.username}}</a>
      {{/unless}}
    </span>
  </div>
</div>