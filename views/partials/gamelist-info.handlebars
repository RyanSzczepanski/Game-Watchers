<div class="row">
  <div class="col s12">
    <a href="/gamelist/view/{{gamelist.id}}">
      <div class="card">
        <div class="card-image">
          <img class="gamelist-card-image" src="https://via.placeholder.com/1500">
          {{#if canEdit}}
          <a class="btn-floating halfway-fab waves-effect waves-light red" href="/gamelist/edit/{{gamelist.id}}"><i
              class="material-icons">edit</i></a>
          {{/if}}
        </div>
        <div class="card-content">
          <span>{{title}}</span>
        </div>
      </div>
    </a>
  </div>
</div>